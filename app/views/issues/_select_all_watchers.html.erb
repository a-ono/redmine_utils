<%= javascript_tag do %>
  $(function() {
    var form = $("#watchers_form");
    var watchers = form.find(":checkbox");

    var all = $('<input type="checkbox"/>').change(function() {
      watchers.attr("checked", this.checked);
    });

    form.prepend(all, $("<span/>").css("font-weight", "bold").text("<%= I18n.t(:select_all) %>"), "<br/>");
  });
<% end %>
